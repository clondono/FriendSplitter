<div id="myConfirmModal<%=confirmEvent.id%>" class="modal hide fade" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Enter password to confirm event</h3>
    </div>
    <div class="modal-body">

        <%= form_tag approve_contribution_path(current_user.getContribution(confirmEvent)), :method => :get do %>
        <%= label_tag(:password, "Enter password to confirm") %>
        <%= password_field_tag :password %>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <%= submit_tag "Confirm", class: "btn btn-success" %>

        <% end %>
    </div>
</div>
